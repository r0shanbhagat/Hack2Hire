<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Themes & Styles
    1.Base application theme.
    2.Toolbar Style
    2.1.BaseTheme
    3.Card View theme
    4.TextInputLayoutLayout theme
    5.Ripple Effect theme
    6.Custom Dialog Theme
    7.Navigation Drawer Activity Theme
    -->

    <!--1. Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--END Base application theme. -->


    <!-- 2.Toolbar Style. -->
    <style name="ToolBarBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorAccent</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/colorButtonBackground</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>


    <style name="ToolBarPopupTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">@dimen/dimen_zero</item>
        <item name="android:paddingRight">@dimen/dimen_zero</item>
        <item name="contentInsetStart">@dimen/dimen_zero</item>
        <item name="contentInsetStartWithNavigation">@dimen/dimen_zero</item>
        <item name="contentInsetLeft">@dimen/dimen_zero</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <!-- END  Toolbar Theme -->

    <!--2.1. Base Manifest Theme -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:editTextColor">@color/colorWhite</item>
    </style>
    <!-- END 2.1.Base Activity Theme -->


    <!-- 3.Card View theme. -->
    <style name="CardViewStyle" parent="Base.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/dimen_two</item>
        <item name="cardElevation">@dimen/dimen_two</item>
        <item name="cardMaxElevation">@dimen/dimen_two</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- 4.TextInputLayoutLayout theme. -->
    <style name="TextInputLayoutStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorDarkGray</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="TextInputLayoutStyle.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
    </style>


    <!-- 5.Ripple Effect theme. -->

    <style name="ButtonBackground" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBackground.Ripple">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="RippleItemBackground">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <!-- END Ripple Effect theme. -->


    <!-- 6.Custom Dialog Theme -->
    <style name="DialogParentLayout">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_ten</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogHeadingTextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:padding">@dimen/dimen_five</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:layout_marginBottom">@dimen/dimen_ten</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogMessageTextView">
        <!--<item name="android:textColor">@color/colorBlack</item>-->
        <item name="android:layout_marginBottom">@dimen/dimen_twenty</item>
        <item name="android:padding">@dimen/dimen_five</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:layout_marginRight">@dimen/dimen_five</item>
        <item name="android:background">@drawable/shape_rounder_corner</item>
    </style>

    <style name="DialogButtonSave">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/lower_medium_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/dimen_five</item>
        <item name="android:layout_marginLeft">@dimen/dimen_five</item>
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_to_bottom</item>
    </style>

    <!--END OF Custom Dialog Theme -->


    <!-- 7.Navigation Drawer Activity Theme -->

    <style name="SliderTextViewTitleStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_ten</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/dimen_eight</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_size_fifteen</item>
        <item name="android:layout_marginTop">@dimen/dimen_five</item>
        <item name="android:layout_marginBottom">@dimen/dimen_five</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SliderTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:paddingTop">@dimen/dimen_fifteen</item>
        <item name="android:paddingBottom">@dimen/dimen_fifteen</item>
        <item name="android:paddingRight">@dimen/dimen_ten</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/dimen_fifteen</item>
    </style>

    <style name="SubSliderTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/dimen_thirty</item>
        <item name="android:paddingTop">@dimen/dimen_eighteen</item>
        <item name="android:paddingBottom">@dimen/dimen_eighteen</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_size_thirteen</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <!--END OF  Navigation Drawer Activity Theme -->


    <style name="DialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>


    <!-- animation for Dialog -->
    <style name="DialogEnterAnimation">
        <item name="android:windowEnterAnimation">@anim/grow_from_middle</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogExitAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_dissappear</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextNormalRegularBlack">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="TextNormalRegularGrey">
<!--
        <item name="android:fontFamily">@font/sf_regular</item>
-->
        <item name="android:textColor">@color/colorFontGreyLight</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="TextNormalRegularPurple">
<!--
        <item name="android:fontFamily">@font/sf_regular</item>
-->
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>
    <style name="YellowBtnTheme">
        <item name="android:background">@drawable/yellow_round_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/mid_margin_padding</item>
        <item name="android:shadowColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text</item>
<!--
        <item name="android:fontFamily">@font/sf_bold</item>
-->
        <item name="android:elevation">@dimen/dimen_five</item>
        <item name="android:textColor">@color/item_light_gray</item>
    </style>



</resources>
