<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/blurhouse" />

    <LinearLayout
        android:id="@+id/llParent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llParent2"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Property Name : "
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPropertyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="N/A"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llParent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llParent3"
        android:layout_marginTop="@dimen/dimen_seven"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Property Value : "
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPropertyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="N/A"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llParent3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvClickMore"
        android:layout_marginTop="@dimen/dimen_seven"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Property Region: "
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPropertyVRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="N/A"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvClickMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/dimen_ten"
        android:text="@string/click_here_for_more_details"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/medium_text" />


</RelativeLayout>